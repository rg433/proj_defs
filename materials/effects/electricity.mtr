gfx/effects/electricity/vert_crawl
{
	qer_editorimage gfx/effects/weapons/lgun.tga
	translucent
	twoSided
	noShadows
	{
		blend add
		map gfx/effects/weapons/lgun.tga
		scale	1, 1
		scroll time * (guitable_random3[time * -.04 ]), time * -0.6
		red		Parm0 * .8
		green	Parm1 * .8
		blue	Parm2 * .9
	}
	{
		blend add
		map gfx/effects/weapons/lgun.tga
		scale	1, .5
		scroll time * (guitable_random3[time * .08 ]), time * -1.1
		red		Parm0 * .6
		green	Parm1 * .6
		blue	Parm2 * .7
	}
	{
		blend add
		map gfx/effects/weapons/lgun.tga
		scale	1, .25
		scroll time * (guitable_random3[time * -.09 ]) , time * -1.8
		red		Parm0 * .6
		green	Parm1 * .6
		blue	Parm2 * .7
	}
}


gfx/effects/electricity/electric
{
	qer_editorimage gfx/effects/electricity/electric.tga
	translucent
	twoSided
	noShadows
	{
		blend add
		map gfx/effects/electricity/electric.tga
		vertexColor
	}
}

gfx/effects/electricity/electricity
{
	qer_editorimage gfx/effects/electricity/electricity.tga
	noshadows
	twosided
        {
		blend	add
